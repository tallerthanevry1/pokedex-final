<%- include("./partials/head.ejs") %> 
<body>
        <h1>PokeDex</h1>
        <a href="/pokemon/new"><button>New Pokemon Generator </button></a><br>
        
        <div id="poke_container" class="poke-container">
            
        <% for(let i = 0; i < pokemon.length; i++) { %> 
    
            
        <div class="pokemon">
                <div class="img-container"> 
                    <a href="/pokemon/<%=i%>"><img src="<%=pokemon[i].img%>" alt="<%=pokemon[i].name %>" /></a>
                    </div>
                    <div class="info"></div>
                    <span class="number">#<%=pokemon[i].id%></span>
                <h3 class="name"><%=pokemon[i].name%></h3> 
                <small class="type">
                    Type: 
                    <span><%=pokemon[i].type%></span>
                </small>
                <a href="/pokemon"></a>
                <form action="/pokemon/<%=pokemon[i]%>?_method=DELETE" method="POST"> 
                    <input type="submit" class="delete" value="Delete"></form><br>
            </div>
                
        
        <% } %> 
    </div><br>


</body>
</html> 